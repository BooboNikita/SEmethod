<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.editQuestion">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/light_light_grey"
        android:paddingHorizontal="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/editques_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/close"/>
        <ImageView
            android:id="@+id/editques_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/send"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/editques_close_btn"
            android:layout_toLeftOf="@id/editques_send_btn"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:text="提问"
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical">
        <com.sendtion.xrichtext.RichTextEditor
            android:id="@+id/editques_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:rt_editor_text_line_space="6dp"
            app:rt_editor_image_height="500"
            app:rt_editor_image_bottom="10"
            app:rt_editor_text_init_hint="在这里输入问题"
            app:rt_editor_text_size="16sp"
            />
        <com.sendtion.xrichtext.RichTextEditor
            android:id="@+id/editques_describe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            app:rt_editor_text_line_space="6dp"
            app:rt_editor_image_height="500"
            app:rt_editor_image_bottom="10"
            app:rt_editor_text_init_hint="在这里输入问题描述"
            app:rt_editor_text_size="16sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_light_grey"></RelativeLayout>
</LinearLayout>